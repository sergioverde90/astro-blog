---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { data, id } = Astro.props.post;
const { title, description, pubDate, updatedDate } = data;

---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				display: flex;
				justify-content: space-between ;
				line-height: 1;
				flex-direction: column;
				padding-bottom: 2em;
			}
			.date {
				color: rgb(160, 160, 160);
				padding-left: 40px;
				padding-top: 2px;
				margin-right: 12px;
				font-size: small;
				text-align: left;
			}
			.last-updated-on {
				font-style: italic;
			}
			#go-back {
				cursor: pointer;
				padding: 0 0.2em 0 0;

				& svg path {
					fill: rgb(220, 220, 220);
					transition: all 0.2s ease;
				}

				& svg:hover path {
					fill: var(--highlight);
				}
			}
			.anchor {
				color: green;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article>
				<div class="title">
					<h1 transition:name={id}>
						<span id="go-back" onclick="history.back()">
							<svg viewBox="0 0 24 24" width="25" height="25" xmlns="http://www.w3.org/2000/svg" stroke="##810c0cc9"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M11.7071 4.29289C12.0976 4.68342 12.0976 5.31658 11.7071 5.70711L6.41421 11H20C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13H6.41421L11.7071 18.2929C12.0976 18.6834 12.0976 19.3166 11.7071 19.7071C11.3166 20.0976 10.6834 20.0976 10.2929 19.7071L3.29289 12.7071C3.10536 12.5196 3 12.2652 3 12C3 11.7348 3.10536 11.4804 3.29289 11.2929L10.2929 4.29289C10.6834 3.90237 11.3166 3.90237 11.7071 4.29289Z" fill="#810c0cc9"></path> </g></svg>
						</span>
						{title}
					</h1>
					<div class="date" transition:name={id + "-pubdate"}>
						{ 
							pubDate && (
								<FormattedDate date={pubDate} />
							)
						}
						{
							updatedDate && (
								<div class="date last-updated-on">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
				</div>
				<div class="prose">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
		<script is:inline>
			document.querySelectorAll("h2").forEach((heading) => {
				const linkSvg = `#`;
				const anchor = document.createElement("a");
				anchor.className = "anchor";
				anchor.href = `#${heading.id}`;
				anchor.textContent = " " + linkSvg;
		
				heading.appendChild(anchor);
			});
		</script>
	</body>
</html>
