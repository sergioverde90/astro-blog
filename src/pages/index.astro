		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style type="text/css">
			.about-header {
				position: relative;
				padding-top: 20px;
				padding-bottom: 20px;
				height: 50%;
			}
			.about-background {
				background-color: rgb(248, 248, 248);
				width: 100%;
				position: absolute;
				height: 90%;
				border: solid 1px rgb(235, 235, 235);
				z-index: -1;
			}
			.wrapper {
				display: flex;
				max-width: 950px;
				margin: 0 auto;
			}
			.index-header {
				padding: 10px;
				width: 75%;
			}
			.about-img {
				text-align: right;
				position: relative;
				top: -8px;

				& img {
					box-shadow: var(--box-shadow);
					width: 80%;
				}
			}
			.about-role {
				color: var(--highlight);
			}

			.about-me {
				font-size: 13px;
				color: rgb(104, 104, 104);
			}

			@media (width < 600px) {
				.wrapper {
					display: grid;
					grid-template-rows: max-content;
				}
				.index-header {
					grid-row: 2; /* move row to position 2 on media screen */
					width: auto;
				}
				.about-img {
					text-align: center;
					grid-row: 1; /* move row to position 1 on media screen */
					top: -15px;
					& img {
						border-radius: 150px;
						width: 50%;
					}
				}
			}
		</style>
	</head>
