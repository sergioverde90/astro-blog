--- 
interface Props {
	description: string;
    url : string
}

const { description, url } = Astro.props;
const MAX_DESCRIPTION_LENGTH = 250;
const length = description.length;
const shortDescription = description.length > MAX_DESCRIPTION_LENGTH 
    ? description.substring(0, MAX_DESCRIPTION_LENGTH).concat(" ...") : description;

---
{ 
    length > MAX_DESCRIPTION_LENGTH ? (
        <p class="post-description">{shortDescription}
            <span class="see-more"> Leer m√°s</span>
        </p>
    ) : (<p class="post-description">{shortDescription}</p>) 
}

<style>
.post-description {
    font-size: 85%;
    font-weight: 500;
    color: rgb(var(--gray-light));
}
.see-more {
    cursor: pointer;
    color: var(--accent);
    transition: all 0.2s ease;

	&:hover {
		color: var(--dark-accent);
	}
}
</style>